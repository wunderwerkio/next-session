{
  "name": "@wunderwerk/next-session",
  "version": "1.0.0-alpha.2",
  "description": "Encrypted, cookie-based session management for NextJS",
  "keywords": [
    "nextjs",
    "session",
    "auth"
  ],
  "author": "Christian Foidl <christian@wunderwerk.io> (https://wunderwerk.io)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@swc/core": "^1.3.65",
    "@types/cookie": "^0.5.1",
    "@wunderwerk/eslint-config": "^1.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-jsdoc": "^46.2.6",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "tsup": "^7.0.0",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "iron-session": "^6.3.1",
    "jose": "^4.14.4"
  },
  "peerDependencies": {
    "next": "^13.4.6"
  },
  "scripts": {
    "check-all": "turbo run build lint typecheck format:check",
    "build": "tsup && patch dist/edge.d.ts patches/fix-edge-types.patch",
    "lint": "eslint --ext .ts src",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check ./src",
    "format:write": "prettier --write ./src",
    "version-package": "pnpm run check-all && changeset version",
    "publish-package": "pnpm run check-all && changeset publish",
    "prepare": "husky install"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./edge": {
      "types": "./dist/edge.d.ts",
      "import": "./dist/edge.js"
    }
  },
  "files": [
    "dist/edge/index.js",
    "dist/edge/index.d.ts",
    "dist/server/index.js",
    "dist/server/index.d.ts",
    "dist/types/index.js",
    "dist/types/index.d.ts",
    "dist/utils/index.js",
    "dist/utils/index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://npm.wunderwerk.dev"
  }
}
