{
  "name": "@wunderwerk/next-session",
  "version": "0.1.0",
  "description": "Encrypted, cookie-based session management for NextJS",
  "keywords": [
    "nextjs",
    "session",
    "auth"
  ],
  "author": "Christian Foidl <christian@wunderwerk.io> (https://wunderwerk.io)",
  "type": "module",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/cookie": "^0.5.1",
    "@wunderwerk/eslint-config": "^1.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-jsdoc": "^46.2.6",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "tsup": "^7.0.0",
    "turbo": "^1.10.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "iron-session": "^6.3.1",
    "jose": "^4.14.4"
  },
  "peerDependencies": {
    "next": "^13.4.6"
  },
  "scripts": {
    "check-all": "turbo run build typecheck format:check",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check ./src",
    "format:write": "prettier --write ./src"
  },
  "exports": {
    "./edge": {
      "types": "./dist/edge/index.d.ts",
      "import": "./dist/edge/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
